}

  .box-content {
    display: block;
    width: 100%;
    transition: text-align 0.4s ease;
  }

  .box.selected {
    flex: 1 1 100%;
    font-size: 1.5rem;
    cursor: default;
    box-shadow: 0 0 16px #00ffccaa, inset 0 0 24px #00ffcc88;
    background: rgba(17, 17, 17, 0.95);
    backdrop-filter: blur(8px);
    padding: 20px;
    align-items: flex-start;
    justify-content: flex-start;
    text-align: left;
  }

  .box.selected .box-content {
    text-align: left;
    margin-bottom: 1rem;
  }

  .box.hidden {
    display: none;
  }

  .back-arrow {
    background-color: rgba(0, 255, 204, 0.9);
    color: #0a0a0a;
    border-radius: 50%;
    width: 36px;
    height: 36px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    font-weight: bold;
    user-select: none;
    transition: background-color 0.3s ease;
    font-size: 1.6rem;
    line-height: 1;
    box-shadow: 0 0 10px #00ffccdd;
    z-index: 999;
    margin-bottom: 1rem;
  }

  .back-arrow:hover {
    background-color: rgba(0, 255, 204, 1);
  }

  .details {
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.5s ease, transform 0.5s ease;
    display: none;
    width: 100%;
    font-weight: normal;
    font-size: 1.5rem;
    color: #00ffd5;
  }

  .box.selected .details {
    display: block;
    opacity: 1;
    transform: translateY(0);
  }

  .details ul {
    padding-left: 1rem;
    margin: 0;
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    list-style: none;
  }

  .details ul li {
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  .details ul li img {
    width: 24px;
    height: 24px;
    margin-right: 0.5rem;
    filter: drop-shadow(0 0 2px #00ffccaa);
    flex-shrink: 0;
  }
</style>

<script>
  const container = document.getElementById('container');
  const boxes = container.querySelectorAll('.box');

  boxes.forEach(box => {
    box.addEventListener('click', () => {
      if (box.classList.contains('selected')) {
        // Si ya está seleccionada, se revierte
        resetBoxes();
      } else {
        // Se selecciona y oculta el resto
        boxes.forEach(b => {
          if (b === box) {
            b.classList.add('selected');
          } else {
            b.classList.add('hidden');
          }
        });
      }
    });
  });

  function resetBoxes() {
    boxes.forEach(b => {
      b.classList.remove('selected', 'hidden');
    });
  }
</script>