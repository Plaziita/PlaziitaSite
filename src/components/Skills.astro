<style>
  * { box-sizing: border-box; }

  /* Contenedor principal */
  .container {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    max-width: 100%;
    padding: 1rem;
    height: auto;
  }

  /* Cajas */
  .box {
    flex: 1 1 250px; 
    min-height: 200px;
    background: rgba(17,17,17,0.8);
    color: #00ffd5;
    font-weight: bold;
    font-size: 1.2rem;
    border: 1px solid #00ffcc33;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.4s ease;
    user-select: none;
    box-shadow: 0 0 8px #00ffcc44, inset 0 0 16px #00ffcc22;
    backdrop-filter: blur(6px);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 15px;
  }

  .box:hover {
    transform: translateY(-6px) scale(1.02);
    box-shadow: 0 0 18px #00ffccaa, inset 0 0 24px #00ffcc55;
    background: rgba(0,20,20,0.85);
    color: #ffffff;
  }

  .box-content {
    display: block;
    width: 100%;
    transition: text-align 0.4s ease;
  }

  .box.selected {
    flex: 1 1 100%;
    font-size: 1.5rem;
    cursor: default;
    box-shadow: 0 0 16px #00ffccaa, inset 0 0 24px #00ffcc88;
    background: rgba(17,17,17,0.95);
    backdrop-filter: blur(8px);
    padding: 20px;
    align-items: flex-start;
    justify-content: flex-start;
    text-align: left;
  }

  .box.selected .box-content {
    text-align: left;
    margin-bottom: 1rem;
  }

  .box.hidden { display: none; }

  .details {
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.5s ease, transform 0.5s ease;
    display: none;
    width: 100%;
    font-weight: normal;
    font-size: 1.2rem;
    color: #00ffd5;
  }

  .box.selected .details {
    display: block;
    opacity: 1;
    transform: translateY(0);
  }

  .details ul {
    padding-left: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    list-style: none;
    overflow-x: auto;
  }

  .details ul li {
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  .details ul li img {
    width: 24px;
    height: 24px;
    margin-right: 0.5rem;
    filter: drop-shadow(0 0 2px #00ffccaa);
    flex-shrink: 0;
  }

  /* ===== Media Queries ===== */
  @media (max-width: 768px) {
    .box {
      flex: 1 1 100%;
      min-height: auto;
      font-size: 1.1rem;
    }
    .details ul {
      flex-direction: column;
      gap: 0.5rem;
    }
    .details ul li {
      white-space: normal;
    }
    .details ul li img {
      width: 20px;
      height: 20px;
      margin-right: 0.3rem;
    }
  }

  @media (max-width: 480px) {
    .box {
      padding: 12px;
      font-size: 1rem;
    }
    .details ul {
      gap: 0.3rem;
    }
  }
</style>

<script>
  const container = document.getElementById('container');
  const boxes = container.querySelectorAll('.box');

  boxes.forEach(box => {
    box.addEventListener('click', () => {
      if (box.classList.contains('selected')) {
        resetBoxes();
      } else {
        boxes.forEach(b => {
          if (b === box) b.classList.add('selected');
          else b.classList.add('hidden');
        });
      }
    });
  });

  function resetBoxes() {
    boxes.forEach(b => b.classList.remove('selected', 'hidden'));
  }
</script>
